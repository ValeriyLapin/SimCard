<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/titleFormTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/titleVaucherForm"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/activity_form_text_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_form_between_rows"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_left_rigth_margin"
                android:layout_marginRight="@dimen/activity_form_between_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/dataString"
                android:textSize="@dimen/activity_form_text_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_between_margin"
                android:layout_marginRight="@dimen/activity_form_left_rigth_margin"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_spinner"
                    android:padding="3dp"
                    android:text="15/10/2014"
                    android:textAppearance="?android:attr/textAppearance" />

                <ImageView
                    android:id="@+id/calendarIconImageView"
                    android:layout_width="@dimen/activity_form_spinner_high"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@android:drawable/ic_menu_today" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_form_between_rows"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_left_rigth_margin"
                android:layout_marginRight="@dimen/activity_form_between_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/torgPredstString"
                android:textSize="@dimen/activity_form_text_size" />

            <Spinner
                android:id="@+id/spinnerAgent"
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_form_spinner_high"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_between_margin"
                android:layout_marginRight="@dimen/activity_form_left_rigth_margin"
                android:layout_weight="1"
                android:background="@drawable/border_spinner"
                android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
                android:textSize="@dimen/activity_form_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_form_between_rows"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_left_rigth_margin"
                android:layout_marginRight="@dimen/activity_form_between_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/pokupatelString"
                android:textSize="@dimen/activity_form_text_size" />

            <Spinner
                android:id="@+id/spinnerBuyer"
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_form_spinner_high"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_between_margin"
                android:layout_marginRight="@dimen/activity_form_left_rigth_margin"
                android:layout_weight="1"
                android:background="@drawable/border_spinner"
                android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
                android:textSize="@dimen/activity_form_text_size" >

                <requestFocus />
                 />
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_form_between_rows"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_left_rigth_margin"
                android:layout_marginRight="@dimen/activity_form_between_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/torgPointString"
                android:textSize="@dimen/activity_form_text_size" />

            <Spinner
                android:id="@+id/spinnerLocation"
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_form_spinner_high"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_between_margin"
                android:layout_marginRight="@dimen/activity_form_left_rigth_margin"
                android:layout_weight="1"
                android:background="@drawable/border_spinner"
                android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
                android:textSize="@dimen/activity_form_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_form_between_rows"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/activity_form_left_rigth_margin"
                android:layout_marginRight="@dimen/activity_form_between_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/primechanieString"
                android:textSize="@dimen/activity_form_text_size" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/activity_form_between_margin"
                android:layout_marginRight="@dimen/activity_form_left_rigth_margin"
                android:layout_weight="1"
                android:background="@drawable/border_description"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="2"
                android:padding="5dp"
                android:scrollbars="vertical"
                android:textSize="@dimen/activity_form_text_size" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_form_between_rows"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/checkBoxDeleteLatestChars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/deleteLatestCharsString"
                android:textSize="@dimen/activity_form_text_size" />

            <EditText
                android:id="@+id/editTextDeleteLatestChars"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="1"
                android:visibility="invisible" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nominalLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_form_between_rows"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_left_rigth_margin"
                android:layout_marginRight="@dimen/activity_form_between_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/nominalString"
                android:textSize="@dimen/activity_form_text_size" />

            <Spinner
                android:id="@+id/spinnerNominal"
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_form_spinner_high"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_between_margin"
                android:layout_marginRight="@dimen/activity_form_left_rigth_margin"
                android:layout_weight="1"
                android:background="@drawable/border_spinner"
                android:nextFocusUp="@+id/fromEditText"
                android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
                android:textSize="@dimen/activity_form_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_form_between_rows"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_left_rigth_margin"
                android:layout_marginRight="@dimen/activity_form_between_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/addedNumbersString"
                android:textSize="@dimen/activity_form_text_size" />

            <TextView
                android:id="@+id/addedNumbersTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_between_margin"
                android:layout_marginRight="@dimen/activity_form_left_rigth_margin"
                android:layout_weight="1"
                android:text="0"
                android:textSize="@dimen/activity_form_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_form_between_rows"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_left_rigth_margin"
                android:layout_marginRight="@dimen/activity_form_between_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/addNumberString"
                android:textSize="@dimen/activity_form_text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_form_between_margin"
                android:layout_marginRight="@dimen/activity_form_left_rigth_margin"
                android:layout_weight="1"
                android:text="@string/listOfAddedString"
                android:textSize="@dimen/activity_form_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_form_between_rows"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_left_rigth_margin2"
                android:layout_marginRight="@dimen/activity_form_between_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/fromEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/activity_form_text_height"
                    android:layout_marginTop="@dimen/activity_form_between_rows"
                    android:background="@drawable/border_ui"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textSize="@dimen/activity_form_text_size" />

                <EditText
                    android:id="@+id/toEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/activity_form_text_height"
                    android:layout_marginTop="@dimen/activity_form_between_rows"
                    android:background="@drawable/border_ui"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textSize="@dimen/activity_form_text_size" />

                <Button
                    android:id="@+id/addButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_form_spinner_high"
                    android:layout_marginLeft="@dimen/activity_form_between_margin"
                    android:text="@string/addButton"
                    android:textSize="@dimen/activity_form_text_size" />
            </LinearLayout>

            <ListView
                android:id="@+id/listOfCards"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/activity_form_between_rows"
                android:layout_marginLeft="@dimen/activity_form_between_margin"
                android:layout_marginRight="@dimen/activity_form_left_rigth_margin2"
                android:layout_marginTop="@dimen/activity_form_between_rows"
                android:layout_weight="1"
                android:background="@drawable/border_ui"
                android:choiceMode="singleChoice"
                android:stackFromBottom="true"
                android:transcriptMode="alwaysScroll" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_form_between_rows"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_left_rigth_margin"
                android:layout_marginRight="@dimen/activity_form_between_margin"
                android:layout_weight="1"
                android:background="#0000FF"
                android:gravity="right"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_form_between_margin"
                android:layout_marginRight="@dimen/activity_form_left_rigth_margin"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_form_between_margin"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/delButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/activity_form_spinner_high"
                        android:text="@string/delButton"
                        android:textSize="@dimen/activity_form_text_size" />

                    <Button
                        android:id="@+id/clearButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/activity_form_spinner_high"
                        android:text="@string/clearButton"
                        android:textSize="@dimen/activity_form_text_size" />
                </LinearLayout>

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_form_between_margin"
                    android:text="@string/saveButton"
                    android:textSize="@dimen/activity_form_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>